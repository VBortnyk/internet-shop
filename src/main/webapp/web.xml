<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.IndexController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>injectData</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.db.InjectDataController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>injectData</servlet-name>
        <url-pattern>/injectData</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allUsers</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.user.GetAllUsersController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allUsers</servlet-name>
        <url-pattern>/users/all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.user.RegistrationUserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.LogoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>userAccount</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.user.GetUserOrderDetails</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userAccount</servlet-name>
        <url-pattern>/users/account</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteUser</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.user.DeleteUserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteUser</servlet-name>
        <url-pattern>/users/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>shoppingCarts</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.cart.AddToCartController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>shoppingCarts</servlet-name>
        <url-pattern>/carts</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>showCartDetails</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.cart.GetProductsInCartController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>showCartDetails</servlet-name>
        <url-pattern>/carts/details</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addToCart</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.cart.AddToCartController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addToCart</servlet-name>
        <url-pattern>/carts/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteFromCart</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.cart.DeleteFromCartController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteFromCart</servlet-name>
        <url-pattern>/carts/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>storage</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.product.GetAllProductsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>storage</servlet-name>
        <url-pattern>/storage</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createOrder</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.order.CreateOrderController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createOrder</servlet-name>
        <url-pattern>/orders/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allUserOrders</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.order.GetAllCurrentUserOrdersController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allUserOrders</servlet-name>
        <url-pattern>/orders/all-user-orders</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allOrders</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.order.GetAllExistingOrdersController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allOrders</servlet-name>
        <url-pattern>/orders/all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>orderDetails</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.order.GetOrderDetailsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>orderDetails</servlet-name>
        <url-pattern>/orders/details</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteOrder</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.order.DeleteOrderController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteOrder</servlet-name>
        <url-pattern>/orders/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createProduct</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.product.CreateProductController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createProduct</servlet-name>
        <url-pattern>/products/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteProduct</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.product.DeleteProductController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteProduct</servlet-name>
        <url-pattern>/products/delete</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>authenticationFilter</filter-name>
        <filter-class>mate.academy.internetshop.web.filters.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>authorisationFilter</filter-name>
        <filter-class>mate.academy.internetshop.web.filters.AuthorisationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authorisationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>
